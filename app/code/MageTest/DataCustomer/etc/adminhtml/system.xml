<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="MageTest" translate="label" class="MageTest" sortOrder="100">
            <label>MageTest</label>
        </tab>
        <section id="DataCustomer" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <class>separator-top</class>
            <label>DataCustomer</label>
            <tab>MageTest</tab>
            <resource>MageTest_DataCustomer::config_extension</resource>
            <group id="general" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Configuration</label>
                <field id="enable" translate="label comment" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Extension Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
                <field id="ataccount" translate="label" type="select" sortOrder="11" showInDefault="1">
                    <label>Show at Account Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="atformreg" translate="label" type="select" sortOrder="12" showInDefault="1">
                    <label>Show at FormRegister</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="atshipping" translate="label" type="select" sortOrder="13" showInDefault="1">
                    <label>Show at Shipping Page</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="atgridcustomer" translate="label" type="select" sortOrder="14" showInDefault="1">
                    <label>Show at Grid Customer</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="atmailtemplate" translate="label" type="select" sortOrder="15" showInDefault="1">
                    <label>Show at Mail Template</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
